{
  "name": "@clscg/monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": "true",
  "packageManager": "pnpm@8.6.10",
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* run build",
    "dev": "nr stub",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp -r",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "test": "vitest",
    "typecheck": "tsc --noEmit "
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@antfu/ni": "^0.21.5",
    "@antfu/utils": "^0.7.5",
    "@clscg/core": "workspace:*",
    "@iconify-json/carbon": "^1.1.21",
    "@types/node": "^20.4.5",
    "@unocss/eslint-config": "^0.55.7",
    "@unocss/reset": "^0.55.7",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue-macros/volar": "^0.14.3",
    "@vue/test-utils": "^2.4.1",
    "@vueuse/core": "^10.4.1",
    "bumpp": "^9.1.1",
    "eslint": "^8.45.0",
    "esno": "^0.17.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "openapi-types": "^12.1.3",
    "pnpm": "^8.6.10",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.11.2",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "unocss": "^0.55.7",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.2",
    "unplugin-vue-macros": "^2.5.1",
    "vite": "^4.4.7",
    "vite-plugin-pages": "^0.31.0",
    "vitest": "^0.33.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue-tsc": "^1.8.11"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
